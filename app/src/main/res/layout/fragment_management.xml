<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vendorStoreNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/your_store"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/menuItemsRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/storeReviewScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="244dp"
        android:text="@string/averagerating"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/menuItemsRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/menuItemsRecyclerView" />

    <TextView
        android:id="@+id/viewCommentsTextView"
        android:layout_width="88dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/view_reviews"
        android:textColor="@color/nicegreen"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/storeReviewScoreTextView"
        app:layout_constraintTop_toBottomOf="@+id/storeReviewScoreTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuItemsRecyclerView"
        android:layout_width="355dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menuHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="12dp"
        android:text="@string/menu"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/menuItemsRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/menuItemsRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/vendorStoreNameTextView" />

    <ImageButton
        android:id="@+id/addItemButton"
        android:layout_width="69dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/add"
        app:layout_constraintBottom_toTopOf="@+id/storeReviewScoreTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuItemsRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>

